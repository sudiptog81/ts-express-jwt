{
  "name": "typescript-example",
  "version": "0.1.5",
  "description": "TypeScript Example",
  "main": "lib/index.js",
  "module": "src/index.ts",
  "scripts": {
    "build": "npm run lint && tsc -p .",
    "watch": "tsc -p . -w",
    "lint": "eslint --fix src/**/*.{ts,js}",
    "nodemon": "nodemon src/server.ts",
    "start": "node lib/server.js",
    "test": "jest --detectOpenHandles --runInBand && codecov",
    "dev": "concurrently 'npm:watch' 'npm:nodemon'"
  },
  "keywords": [
    "typescript",
    "jsonwebtoken",
    "express"
  ],
  "author": {
    "name": "Sudipto Ghosh",
    "email": "sudipto@ghosh.pro",
    "url": "https://sudipto.ghosh.pro"
  },
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^3.0.7",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "express-jwt": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/express-handlebars": "0.0.31",
    "@types/express-jwt": "0.0.42",
    "@types/jest": "^24.0.25",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.12.22",
    "@types/sqlite3": "^3.1.6",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "axios": "^0.18.1",
    "codecov": "^3.6.1",
    "concurrently": "^4.1.2",
    "eslint": "^5.16.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "superagent": "^5.1.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tsc": "^1.20150623.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "/lib/"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
