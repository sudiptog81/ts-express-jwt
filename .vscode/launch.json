    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Watch",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}\\src\\server.ts",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "program": "${workspaceFolder}\\src\\server.ts",
            "preLaunchTask": "npm: build",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}